{
  "name": "@arrislink/axon",
  "version": "1.5.0",
  "description": "AI-Powered Development Operating System with unified LLM provider support",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ax": "dist/index.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist/index.js",
    "templates",
    "README.md",
    "README.zh-CN.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build --compile --minify src/index.ts --outfile dist/ax",
    "build:js": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "lint": "bunx @biomejs/biome check --write .",
    "format": "bunx @biomejs/biome format --write .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "release": "./scripts/publish.sh",
    "prepublishOnly": "npm run clean && npm run build:js"
  },
  "keywords": [
    "ai",
    "cli",
    "axon",
    "development",
    "automation",
    "openspec",
    "opencode",
    "oh-my-opencode",
    "omo",
    "beads",
    "skills",
    "findskills",
    "llm",
    "anthropic",
    "bun"
  ],
  "author": "Axon Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arrislink/axon.git"
  },
  "bugs": {
    "url": "https://github.com/arrislink/axon/issues"
  },
  "homepage": "https://github.com/arrislink/axon#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.0.0",
    "mammoth": "^1.11.0",
    "ora": "^8.0.0",
    "prompts": "^2.4.2",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.0",
    "@types/bun": "latest",
    "@types/prompts": "^2.4.9",
    "typescript": "^5.3.0"
  },
  "engines": {
    "bun": ">=1.1.0",
    "node": ">=18.0.0"
  }
}