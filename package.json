{
  "name": "@arrislink/axon",
  "version": "2.0.0",
  "description": "AI-Driven Development OS - From requirements to code",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "bin": {
    "ax": "dist/ax"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "README.zh-CN.md",
    "docs/GUIDE.md",
    "docs/GUIDE.zh-CN.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build --compile --minify src/index.ts --outfile dist/ax",
    "build:js": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test tests/ --timeout 60000",
    "lint": "bunx @biomejs/biome check --write .",
    "format": "bunx @biomejs/biome format --write .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build && bun run test",
    "publish:patch": "bun run prepublishOnly && npm publish",
    "publish:minor": "bun run prepublishOnly && npm publish",
    "publish:major": "bun run prepublishOnly && npm publish",
    "publish:beta": "bun run prepublishOnly && npm publish --tag beta",
    "tag": "git tag -a v$npm_package_version -m \"v$npm_package_version\" && git push origin v$npm_package_version"
  },
  "keywords": [
    "ai",
    "cli",
    "axon",
    "development",
    "automation",
    "opencode",
    "omo",
    "beads",
    "skills",
    "llm",
    "anthropic",
    "bun"
  ],
  "author": "Axon Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arrislink/axon.git"
  },
  "bugs": {
    "url": "https://github.com/arrislink/axon/issues"
  },
  "homepage": "https://github.com/arrislink/axon#readme",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.1.0",
    "node": ">=18.0.0"
  }
}
